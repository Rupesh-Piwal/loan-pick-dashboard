generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


enum ProductType {
  personal
  education
  vehicle
  home
  credit_line
  debt_consolidation
}

enum Role {
  user
  assistant
}


model Product {
  id                 String    @id @default(uuid())
  name               String
  bank               String
  type               ProductType
  rate_apr           Decimal
  min_income         Decimal
  min_credit_score   Int
  tenure_min_months  Int       @default(6)
  tenure_max_months  Int       @default(60)
  processing_fee_pct Decimal   @default(0)
  prepayment_allowed Boolean   @default(true)
  disbursal_speed    String    @default("standard")
  docs_level         String    @default("standard")
  summary            String?
  faq                Json      @default("[]")
  terms              Json      @default("{}")

  ai_chat_messages   AiChatMessage[]
}

model User {
  id           String           @id @default(uuid())
  email        String           @unique
  display_name String?

  ai_chat_messages AiChatMessage[]
}

model AiChatMessage {
  id         String  @id @default(uuid())
  role       Role
  content    String
  created_at DateTime @default(now())

  user_id    String?
  product_id String?

  user       User?    @relation(fields: [user_id], references: [id])
  product    Product? @relation(fields: [product_id], references: [id])
}
